<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.BoardActivity"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    android:paddingTop="@dimen/_20sdp">

    <LinearLayout
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/iv_back"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/icn_back_01" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="@string/user_info"
            android:textColor="@color/fc_mainColor"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />




    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_marginTop="@dimen/_20sdp"
        app:tabBackground="@color/trans"
        app:tabMode="fixed"
        app:tabRippleColor="@null"
        app:tabIndicatorFullWidth="false"
        android:id="@+id/tab_userInfoTabMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_underline_01">


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2

        android:id="@+id/vp_userInfoPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />





</LinearLayout>