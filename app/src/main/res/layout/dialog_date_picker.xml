<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_80"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:gravity="top|center"

    >

    <LinearLayout
        android:gravity="center"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/bg_popup_01">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:background="@color/fc_boldColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:gravity="center|top"
            android:layout_weight="1"
            android:layout_margin="@dimen/_10sdp"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <TextView
                android:id="@+id/tv_date"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/fc_mainColor"
                android:text="2020년 5월 6일 월요일"
                android:textSize="@dimen/_11sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <DatePicker

                android:theme="@style/MyAppTheme.DatePicker"
                android:background="@color/white"
                android:id="@+id/dp_datePicker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"/>



        </LinearLayout>



        <Button
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:stateListAnimator="@null"
            android:textColor="@color/white"

            android:background="@drawable/bg_rounded_05"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"
            android:text="@string/search_list"
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:padding="@dimen/_16sdp"
        android:src="@drawable/icn_popup_close_03"

        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:background="@drawable/bg_popup_close_01"
        android:stateListAnimator="@null"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        />
</LinearLayout>