<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_80"
    android:orientation="vertical"
android:padding="@dimen/_10sdp"
    android:gravity="top|center"
    android:id="@+id/main_layout"
    >

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/bg_popup_01">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:background="@color/fc_boldColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_nowLocation"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:text="현 위치 :"
                    android:textColor="@color/fc_mainColor"
                    android:textSize="@dimen/_11sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_nowLocation"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:text="부산광역시 해운대구 재송동 센텀동로 97"
                    android:textColor="@color/fc_mainColor"
                    android:textSize="@dimen/_11sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_commuteDate"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_dateTime"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:text="2020-05-06 (수) 11:16:51"
                    android:textColor="@color/fc_mainColor"
                    android:textSize="@dimen/_11sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:singleLine="true"
                        android:gravity="center|left"
                        android:text="제공장소와의 오차범위는"
                        android:textColor="@color/fc_mainColor"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:id="@+id/tv_meter"
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:text="50M"
                        android:textColor="@color/fc_mainColor"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView

                        android:singleLine="true"
                        android:gravity="center|left"
                        android:text="입니다."
                        android:textColor="@color/fc_mainColor"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:padding="@dimen/_1sdp"
                android:background="@color/black"
                android:id="@+id/layout_mvContainer"
                android:layout_width="@dimen/_210sdp"
                android:layout_height="@dimen/_140sdp" />

            <Button
                android:layout_marginTop="@dimen/_15sdp"
                android:stateListAnimator="@null"
                android:textColor="@color/white"

                android:background="@drawable/bg_rounded_05"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:text="@string/confirm_get_to_work"
                android:id="@+id/btn_commuteConfirm"
                android:layout_width="@dimen/_210sdp"
                android:layout_height="@dimen/_40sdp"/>

        </LinearLayout>





    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:padding="@dimen/_16sdp"
        android:src="@drawable/icn_popup_close_03"

        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:background="@drawable/bg_popup_close_01"
        android:stateListAnimator="@null"
        />
</LinearLayout>