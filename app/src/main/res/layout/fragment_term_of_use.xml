<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:visibility="visible">

<LinearLayout
    android:paddingBottom="@dimen/_40sdp"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <ScrollView
android:layout_weight="1"
        android:layout_marginBottom="@dimen/_10sdp"
        android:scrollbarTrackVertical="@color/fc_middleLightColor2"
        android:scrollbarThumbVertical="@color/fc_mainColor"
        android:scrollbarSize="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:scrollbars="vertical"
android:background="@drawable/bg_rounded_02"
        android:layout_width="match_parent"
        android:layout_height="0dp">

<TextView
    android:textColor="@color/fc_mainColor"
    android:id="@+id/tv_termOfUse"
    android:textSize="@dimen/_9sdp"
    android:text="-"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>


    </ScrollView>
<LinearLayout
    android:id="@+id/layout_checkArea_01"
    android:paddingRight="@dimen/_10sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:orientation="horizontal"
    android:background="@drawable/bg_input_rounded_01"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp">
<TextView

    android:textStyle="bold"
    android:textColor="@color/fc_mainColor"
    android:textSize="@dimen/_11sdp"
    android:text="@string/agree_term_of_use"
    android:gravity="center|left"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent"/>
    <CheckBox
        android:id="@+id/chkbox_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox_check"


        />
</LinearLayout>

    <ScrollView
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:scrollbarTrackVertical="@color/fc_middleLightColor2"
        android:scrollbarThumbVertical="@color/fc_mainColor"
        android:scrollbarSize="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:scrollbars="vertical"
        android:background="@drawable/bg_rounded_02"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textColor="@color/fc_mainColor"
            android:id="@+id/tv_privacy"
            android:textSize="@dimen/_9sdp"
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </ScrollView>
    <LinearLayout
        android:id="@+id/layout_checkArea_02"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:orientation="horizontal"
        android:background="@drawable/bg_input_rounded_01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <TextView

            android:textStyle="bold"
            android:textColor="@color/fc_mainColor"
            android:textSize="@dimen/_11sdp"
            android:text="@string/agree_privacy"
            android:gravity="center|left"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <CheckBox
            android:id="@+id/chkbox_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_check"


            />
    </LinearLayout>
</LinearLayout>




    <Button
        android:stateListAnimator="@null"
        android:textColor="@color/fc_boldColor"

        android:background="@drawable/bg_rounded_01"
        android:textStyle="bold"
        android:textSize="@dimen/_11sdp"
        android:text="@string/next"
        android:id="@+id/btn_Next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"/>
</LinearLayout>