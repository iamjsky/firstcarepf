<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_80"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:gravity="top|center"
android:id="@+id/main_layout"
    >

    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/bg_popup_01">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:background="@color/fc_boldColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:gravity="center|top"
            android:layout_weight="1"
            android:layout_margin="@dimen/_20sdp"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="@color/fc_mainColor"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/input_phone_number"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:ems="10"
                    android:focusableInTouchMode="true"
                    android:nextFocusDown="@+id/edtxt_inputPhoneNum2"
                    android:imeOptions="actionNext"
                    android:id="@+id/edtxt_inputPhoneNum1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_rounded_01"
                    android:gravity="center"
                    android:hint="@string/hint_phone_number_01"
                    android:inputType="number"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/fc_mainColor"
                    android:textColorHint="@color/fc_middleLightColor2"

                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <TextView
                   android:textSize="@dimen/_11sdp"
                   android:textColor="@color/fc_mainColor"
                   android:layout_marginLeft="@dimen/_4sdp"
                   android:layout_marginRight="@dimen/_4sdp"
                   android:gravity="center"
                   android:text="-"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
                <EditText
                    android:ems="10"
                    android:focusableInTouchMode="true"
                    android:nextFocusDown="@+id/edtxt_inputPhoneNum3"
                    android:imeOptions="actionNext"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColorHint="@color/fc_middleLightColor2"
                    android:inputType="number"
                    android:id="@+id/edtxt_inputPhoneNum2"
                    android:textColor="@color/fc_mainColor"
                    android:singleLine="true"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/bg_input_rounded_01"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    android:hint="@string/hint_phone_number_02"

                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"/>
                <TextView
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/fc_mainColor"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:gravity="center"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:ems="10"
                    android:focusableInTouchMode="true"
                    android:imeOptions="actionDone"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColorHint="@color/fc_middleLightColor2"
                    android:inputType="number"
                    android:id="@+id/edtxt_inputPhoneNum3"
                    android:textColor="@color/fc_mainColor"
                    android:singleLine="true"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/bg_input_rounded_01"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    android:hint="@string/hint_phone_number"

                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"/>

            </LinearLayout>


            <Button
                android:focusable="true"
                android:gravity="center"
                android:id="@+id/btn_sendAuthNum"
                android:textColor="@color/fc_mainColor"
                android:singleLine="true"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/bg_rounded_06"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:text="@string/send_auth_number"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"/>
            <TextView
                android:textColor="@color/fc_mainColor"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/input_auth_number_01"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:enabled="false"
                    android:gravity="center"
                    android:textColorHint="@color/fc_middleLightColor2"
                    android:inputType="number"
                    android:id="@+id/edtxt_inputAuthNum"
                    android:textColor="@color/fc_mainColor"
                    android:singleLine="true"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/bg_input_rounded_01"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    android:hint="@string/input_auth_number_02"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"/>
                <TextView

                    android:visibility="gone"
                    android:textColor="@color/fc_deepGrayColor"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_authTime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:text="3:00"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"
                    />

            </RelativeLayout>

            <Button

                android:gravity="center"
                android:id="@+id/btn_checkAuthNum"
                android:textColor="@color/fc_lightGrayColor"
                android:singleLine="true"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/bg_rounded_gray_04"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:text="@string/check_auth_number"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"/>



            </LinearLayout>
        <Button

            android:layout_margin="@dimen/_20sdp"
            android:enabled="false"
            android:stateListAnimator="@null"
            android:textColor="@color/fc_deepGrayColor"

            android:background="@drawable/bg_rounded_04"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"
            android:text="@string/auth_finish"
            android:id="@+id/btn_finishAuth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:padding="@dimen/_16sdp"
        android:src="@drawable/icn_popup_close_03"

        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:background="@drawable/bg_popup_close_01"
        android:stateListAnimator="@null"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        />
</LinearLayout>